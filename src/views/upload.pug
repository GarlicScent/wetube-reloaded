extends base

block content
  if errorMessage 
    span=errorMessage
  form(method="post" enctype="multipart/form-data") 
    label(for="video")  Video File 
    input(type="file" accept="video/*" required id="video" name="video")
    input(name="title", type="text", placeholder="Title", required, maxLength=80)
    input(name="description", type="text", placeholder="Description", required, minLength=20)
    input(name="hashtags", type="text", placeholder="Hashtags, seprated by comma.", required)
    input(type="submit", value="Upload Video")